                <p id="msgAfterCreation"></p>
            </form>
            <script>
                $("#subAccountSubmit").click(function() {
                    var email = $("#ovda_indexbundle_account_email").val();
                    var password = $("#ovda_indexbundle_account_password").val();

                    if (email && password) {
                        var data = {
                            "email": email,
                            "password": password
                        };
                        $.ajax({
                            type: 'POST',
                            url: "{{ path('subCreation') }}",
                            data: data,
                            cache: false
                        }).done(function(data) {
                            if (data.success) {
                                $("#msgAfterCreation").css('color', "lightblue");
                            } else {
                                $("#msgAfterCreation").css('color', "red");
                            }
                           $("#msgAfterCreation").text(data.message);
                           $("#msgAfterCreation").fadeIn();
                        });
                    }
                })
            </script>
